<div class="post">
    <div class="postTitleBox">
        <div class="postTitle">{{post.title}} </div>
        <div class="postCreator">Posted by {{post.creator}} on {{post.date}}</div>
    </div>
    <div class="postContent">
        {{post.content}}
    </div>
</div>
{{#each comments as |comment| }}
<div class="editPost">
    <div class="editTitlebox">Edit Post</div>
    <form action="">
        <label for="editTitle">Title</label><br>
        <input type="text" name="editTitle" id="editTitle" value="{}"><br>
        <label for="editContent">Content</label><br>
        <textarea name="editContent" id="editContent" cols="100" rows="10">{}</textarea><br>
        <button type="submit">Update Post</button>
        <button>Delete</button>
    </form>
</div>
{{/each}}